<% @title = "Resultados de la búsqueda" %>
<div class="row margin" style="margin-top:20px;">
  <div class="span9">
    <h2>Resultados de la búsqueda <i><%= @query %></i> </h2> 

    <hr />

    <% if @contents.empty? %>
      No se han encontrado contenidos 
    <% else %>
      <table class="table table-striped table-bordered table-condensed">
        <thead>
          <tr>
            <th>Título</th>
            <th>Fecha</th>
            <th>Tipo</th>
            <th>Ciudad</th>
            <th>País</th>
          </tr>
        </thead>
        <tbody>
          <% @contents.each do |text| %>
            <tr>
              <td><%= link_to text.title, text %></td>
              <td><%= l text.happened_at, :format => :short %></td>
              <td><%= text.class %></td>
              <td><%= text.city %></td>
              <td><%= text.country %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <br />
      <%# gmaps4rails(@map) %>
    <% end %>
  </div>
</div>



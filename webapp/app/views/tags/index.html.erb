<div class="row" style="margin:20px;">
  <div class="span11">
    <h1>Nube de tags</h1>
    <hr />
    <ul id="tagcloud">
      <% @tagcloud.each do |tag| %>
        <li class="<%= tag_weight_css(tag[:count]) %>">
          <%= link_to tag[:name], tag_show_path(tag[:name]) %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<div class="row" style="margin-top:20px;">
  <%= render :partial => 'partials/sidebar_bank' %>
  <div class="span9">
    <div class="span4">
      <h2>Últimos textos</h2>
    </div>

<div class="span9 add-content">
  <div class="btn btn-large">
    <i class="icon-align-left"></i><%= link_to 'Introducir nuevo texto', new_text_path %>
  </div>
</div>
<br />

<table class="table table-striped table-bordered table-condensed">

  <thead>
    <tr>
      <th>Título</th>
      <th>Fecha</th>
      <th>Ciudad</th>
      <th>País</th>
      <th>Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @texts.each do |text| %>
      <tr>
        <td><%= link_to text.title, text %></td>
        <td><%= text.happened_at %></td>
        <td><%= text.city %></td>
        <td><%= text.country %></td>
        <td>
          <%= link_to 'Mostrar', text %>
          <%= link_to 'Editar', edit_text_path(text) %>
          <%= link_to 'Eliminar', text, confirm: '¿Estas segura?', method: :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>


</table>

<br />
<%= paginate @texts %>  

<%= gmaps4rails(@map) %>
  </div>
</div>



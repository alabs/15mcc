<div class="row" style="margin-top:20px;">
  <%= render :partial => 'partials/sidebar_bank' %>
  <div class="span9">
    <h2>Últimos textos</h2>

<table class="table table-striped table-bordered table-condensed">

  <thead>
    <tr>
      <th>Título</th>
      <th>Fecha</th>
      <th>Ciudad</th>
      <th>País</th>
      <th>Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @texts.each do |text| %>
      <tr>
        <td><%= link_to text.title, text %></td>
        <td><%= text.happened_at %></td>
        <td><%= text.city %></td>
        <td><%= text.country %></td>
        <td>
          <%= link_to 'Mostrar', text %>
          <%= link_to 'Editar', edit_text_path(text) %>
          <%= link_to 'Eliminar', text, confirm: '¿Estas segura?', method: :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>


</table>

<br />

<%= link_to 'Introducir nuevo texto', new_text_path %>
  </div>
</div>

<%= gmaps4rails(@map) %>


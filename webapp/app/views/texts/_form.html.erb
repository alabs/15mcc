<div class="form-stacked main-form">
  <%= form_for(@text, :html => {:class => "content-form"} ) do |f| %>
  <fieldset>
    <legend>Introducir nuevo texto</legend>
    <%= render :partial => "partials/copyright_notice" %>
    <div class="form-field">
      <%= f.text_field :title, required: true, placeholder: 'TÃ­tulo del texto', :class => 'span8' do %>
        <p class="help-block"><%= I18n.t("help.text.title") %></p>
      <% end %>
        <div class="wmd-panel">
          <%= f.text_area :body, rows: 6, required: true, placeholder: 'Cuerpo del texto', :class => 'span8 wmd-input', :id => 'wmd-input' do %>
          <p class="help-block"><%= I18n.t("help.text.body") %></p>
          <div id="wmd-button-bar"></div>
        <p>
          <a href="#" class="show_markdown_help">ver ayuda de estilos</a>
        </p>
        <div class="markdown_help" style="display:none;">
          <%= render :partial => 'partials/markdown_help' %>
        </div>
      <% end %>
      </div>
    </div>
    <%= render :partial => "partials/form_for_content", :locals => {:f => f, :content => @text} %>
    <div id="form-actions">
      <%= f.submit 'Enviar texto', :class => 'btn primary' %>
      <%= link_to 'Cancelar', texts_path, :class => 'btn danger' %>
    </div>
    </fieldset>
<% end %>
</div>

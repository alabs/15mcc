<h1>Listing nodes</h1>

<table>
  <tr>
    <th>Label</th>
    <th>Pos left</th>
    <th>Pos top</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @nodes.each do |node| %>
  <tr>
    <td><%= node.label %></td>
    <td><%= node.pos_left %></td>
    <td><%= node.pos_top %></td>
    <td><%= link_to 'Show', node %></td>
    <td><%= link_to 'Edit', edit_node_path(node) %></td>
    <td><%= link_to 'Destroy', node, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>


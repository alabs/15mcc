<div class="row" style="margin-top:20px;">
  <%= render :partial => 'partials/sidebar_bank' %>
  <div class="span9">
    <div class="span4">
      <h2>Últimos audios</h2>
    </div>

<div class="span9 add-content">
  <div class="btn btn-large">
    <i class="icon-music"></i><%= link_to 'Introducir nuevo audio', new_audio_path %>
  </div>
</div>


<table class="table table-striped table-bordered table-condensed">

  <thead>
    <tr>
      <th>Título</th>
      <th>Fecha</th>
      <th>Ciudad</th>
      <th>País</th>
      <th>Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @audios.each do |audio| %>
      <tr>
        <td><%= link_to audio.title, audio %></td>
        <td><%= audio.happened_at %></td>
        <td><%= audio.city %></td>
        <td><%= audio.country %></td>
        <td>
          <%= link_to 'Mostrar', audio %>
          <%= link_to 'Editar', edit_audio_path(audio) %>
          <%= link_to 'Eliminar', audio, confirm: '¿Estas segura?', method: :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>


</table>

<br />
<%= paginate @audios %>  

<%= gmaps4rails(@map) %>
  </div>
</div>



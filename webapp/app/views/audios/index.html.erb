<div class="row" style="margin-top:20px;">
  <%= render :partial => 'partials/sidebar_bank' %>
  <div class="span9">
    <div class="span4">
      <h2>Últimos audios</h2>
    </div>

<div class="span9 add-content">
  <div class="btn btn-large">
    <i class="icon-music"></i><%= link_to 'Introducir nuevo audio', new_audio_path %>
  </div>
</div>


<table class="table table-striped table-bordered table-condensed">

  <thead>
    <tr>
      <th>Título</th>
      <th>Fecha</th>
      <th>Ciudad</th>
      <th>País</th>
    </tr>
  </thead>

  <tbody>
    <% @audios.each do |audio| %>
      <tr>
        <% user = audio.user ? audio.user.username : "anonymous" %>
        <td><%= link_to audio.title, audio_path(audio, :username => user) %></td>
        <td><%= l audio.happened_at, :format => :short %></td>
        <td><%= audio.city %></td>
        <td><%= audio.country %></td>
        <% if can? :update, audio %> 
          <td>
            <%= link_to 'Editar', edit_audio_path(audio, :username => user), :class => "btn btn-primary" %>
          </td>
        <% end %>
        <% if can? :destroy, audio %> 
          <td>
            <%= link_to 'Eliminar', audio_path(audio, :username => user), :class => "btn btn-danger", confirm: '¿Estas segura?', method: :delete %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>


</table>

<br />
<%= paginate @audios %>  

<%= gmaps4rails(@map) %>
  </div>
</div>



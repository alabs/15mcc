<div class="form-stacked main-form">
  <%= form_for(@audio, :html => { :multipart => true, :class => "content-form" }) do |f| %>
  <fieldset>
    <legend>Introducir nuevo audio</legend>
      <%= render :partial => "partials/copyright_notice" %>

      <div class="form-field">
        <%= f.text_field :title, required: true, placeholder: 'TÃ­tulo del audio', :class => 'span8' do %>
          <p class="help-block"><%= I18n.t("help.audio.title") %></p>
        <% end %>
        <%= f.file_field :archive, required: true %>
          <p class="help-block"><%= I18n.t("help.audio.archive") %></p>
      </div>

      <%= render :partial => "partials/form_for_content", :locals => {:f => f, :content => @audio} %>
    <div id="form-actions" style="margin-top: 20px;">
      <%= f.submit 'Enviar audio', :class => 'btn btn-primary' %>
      <%= link_to 'Cancelar', audios_path, :class => 'btn btn-danger' %>
    </div>
    </fieldset>
<% end %>
</div>

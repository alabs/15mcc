<div class="row" style="margin:20px;">

  <%= render :partial => "partials/content_header", :locals => { :content => @image, :type => "image" } %>

  <div class="center">
    <%= image_tag(@image.img.url) %>
  </div>

  <div class="span6">
    <%= render :partial => "partials/social_buttons", :locals => { :content => @image } %>
  </div>

  <div class="span5 right">
    <% user = @image.user ? @image.user.username : "anonymous" %>
    <% if can? :update, @image %> 
      <%= link_to 'Editar', edit_image_path(@image, :username => user), :class => "btn" %>
    <% end %>
    <% if can? :destroy, @image %> 
        <%= link_to 'Eliminar', image_path(@image, :username => user), :class => "btn", confirm: 'Â¿Estas segura?', method: :delete %>
    <% end %>

    <%= link_to "Descargar", download_image_path(@image, :username => user), :class => "btn" %>

    <%= render :partial => "partials/change_priority", :locals => { :content => @image } %>

    <a class="btn" data-toggle="modal" href="#abuse-modal">Denunciar contenido</a>
  </div>

  <%= render :partial => "partials/metadata", :locals => { :content => @image, :map => @map } %>
</div>


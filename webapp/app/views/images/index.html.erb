<div class="row" style="margin-top:20px;">
  <%= render :partial => 'partials/sidebar_bank' %>
  <div class="span13">
<h2>Últimas imágenes</h2>

<table class="bordered-table zebra-striped">

  <thead>
    <tr>
      <th>Título</th>
      <th>Fecha</th>
      <th>Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= link_to image.title, image %></td>
        <td><%= image.created_at %></td>
        <td>
          <%= link_to 'Mostrar', image %>
          <%= link_to 'Editar', edit_image_path(image) %>
          <%= link_to 'Eliminar', image, confirm: '¿Estas segura?', method: :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>


</table>

<br />

<%= link_to 'Subir nueva imágen', new_image_path %>
  </div>
</div>






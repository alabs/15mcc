<div class="row" style="margin-top:20px;">
  <%= render :partial => 'partials/sidebar_bank' %>
  <div class="span9">
<h2>Últimas imágenes</h2>

<div class="span9 add-content">
  <div class="btn btn-large">
    <i class="icon-picture"></i><%= link_to 'Subir nueva imagen', new_image_path %>
  </div>
</div>

<table class="table table-striped table-bordered table-condensed">

  <thead>
    <tr>
      <th>Título</th>
      <th>Fecha</th>
      <th>Ciudad</th>
      <th>País</th>
      <th>Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= link_to image.title, image %></td>
        <td><%= image.happened_at %></td>
        <td><%= image.city %></td>
        <td><%= image.country %></td>
        <td>
          <%= link_to 'Mostrar', image %>
          <%= link_to 'Editar', edit_image_path(image) %>
          <%= link_to 'Eliminar', image, confirm: '¿Estas segura?', method: :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>


</table>

<br />

<%= paginate @images %>
<%= gmaps4rails(@map) %>
  </div>
</div>


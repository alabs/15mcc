<div class="span10 mt1">

  <%= bootstrap_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form-horizontal"} ) do |f| %>
    <legend>Iniciar sesión</legend>
  
        <%= f.text_field :login %>
        <%= f.password_field :password %>
  
    <% if devise_mapping.rememberable? -%>
      <%= f.check_box :remember_me %> <%= f.label :remember_me, "Recordarme" %>
    <% end -%>
  
    <div class="form-actions"><%= f.submit "Iniciar sesión", :class => "btn btn-primary" %></div>
  <% end %>
  
  <%= render "links" %>

</div>

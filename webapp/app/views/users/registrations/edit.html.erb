<div class="span10 mt1">

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => "form-horizontal" }) do |f| %>
    <legend>Editar usuario</legend>

    <%= devise_error_messages! %>

    <div class="control-group">
      <%= f.label :email, "Correo electrónico", :class => "control-label" %>
      <div class="controls">
        <%= f.email_field :email %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :current_password, "Contraseña actual", :class => "control-label" %> 
      <div class="controls">
        <%= f.password_field :current_password %>
        <i>(necesitamos tu contraseña para confirmar tus cambios)</i>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :password, "Contraseña nueva", :class => "control-label" %>
      <div class="controls">
        <%= f.password_field :password %>
        <i>(dejar en blanco si no quieres cambiarla)</i>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :password_confirmation, "Confirmar contraseña nueva", :class => "control-label" %>
      <div class="controls">
        <%= f.password_field :password_confirmation %>
      </div>
    </div>

    <div class="form-actions"><%= f.submit "Actualizar", :class => "btn btn-primary" %></div>
  <% end %>

  <legend>Borrar mi cuenta</legend>

  <p>¿No te gustamos? <%= link_to "Cancelar mi cuenta", registration_path(resource_name), :confirm => "¿Estás seguro?", :method => :delete, :class => "btn" %></p>

</div>

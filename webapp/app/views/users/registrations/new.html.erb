<div class="span10 mt1">

  <%= bootstrap_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "form-horizontal"}) do |f| %>
    <legend>Registrarse</legend>

      <%= f.text_field :username, :required => true do %>
        <p class="help-block">MÃ¡ximo 10 caracteres</p>
      <% end %>

      <%= f.email_field :email, :required => true %>
      <%= f.password_field :password, :required => true %>
      <%= f.password_field :password_confirmation, :required => true %>
      <%= f.check_box :terms, :required => true %>
    <div class="form-actions"><%= f.submit "Registrarse", :class => "btn btn-primary" %></div>
  <% end %>

  <%= render "links" %>
</div>

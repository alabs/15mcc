    </div>

    <div class="control-group">
      <%= label "user_terms", "Acepto las condiciones de uso", :class => "control-label" %>
      <div class="controls">
        <%= check_box_tag("user[terms]", true, false) %>
      </div>
    </div>

    <div class="form-actions"><%= f.submit "Registrarse", :class => "btn btn-primary" %></div>
  <% end %>

  <%= render "links" %>
</div>

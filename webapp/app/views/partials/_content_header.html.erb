  <div class="row">
    <% if content.user %>
      <div class="span1">
        <%= link_to(image_tag(content.user.avatar.url(:normal)), profile_path(content.user.username)) %>
      </div>
      <div class="span8">
        <h2><%= content.title %></h2>
        <%= link_to content.user.username, profile_path(content.user.username) %>
      </div>
    <% else %>
      <div class="span1">
        <%= image_tag "missing.png"%>
      </div>
      <div class="span8">

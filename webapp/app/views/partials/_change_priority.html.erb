
    <% if can? :priority, content %>
      <% if content.priority == true %>
        <%= link_to "#", :class => "btn priority", "data-id" => content.id, "data-priority-action" => "remove", "data-type" => content.class.to_s  do %>
          <i class="icon-star"></i>
          Quitar prioridad
        <% end %>
      <% else %>
        <%= link_to "#", :class => "btn priority", "data-id" => content.id, "data-priority-action" => "add", "data-type" => content.class.to_s  do %>
          <i class="icon-star-empty"></i>
          Dar prioridad
        <% end %>
      <% end %>
    <% end %>

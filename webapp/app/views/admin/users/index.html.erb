<div class="span10 mt1">
  <h1>Administrar usuarios</h1>
  <br />
  <table class="table table-striped table-bordered table-condensed">
    <thead>
      <tr>
        <th>Usuario</th>
        <th>Email</th>
        <th>Rol</th>
        <th>Última conexión</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.username %></td>
          <td><%= user.email %></td>
          <td><%= best_in_place user, :role, :type => :select, :collection => build_roles, :path => admin_users_update_role_path(user.username) %></td>
          <td><%= user.last_sign_in_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="form-stacked main-form">
<%= form_for(@video) do |f| %>
  <fieldset>
    <legend>Introducir nuevo video</legend>
    <div class="form-field">
      <%= f.label 'URL' %>
      <%= f.text_field :url, required: true, placeholder: 'URL del video', :class => 'span10' %>
      <% unless @video.errors[:url].blank? %>
        <span class="error-message"><%= @video.errors[:url].to_sentence %></span>
      <% end %>
    </div>
    <div class="form-field">
      <%= f.label 'Tags' %>
      <%= f.text_field :tags, placeholder: 'Tags separados por comas', class: 'span10' %>
    </div>
    <div id="form-actions">
      <%= f.submit 'Enviar video', :class => 'btn primary' %>
      <%= link_to 'Cancelar', texts_path, :class => 'btn danger' %>
    </div>
    </fieldset>
<% end %>
</div>

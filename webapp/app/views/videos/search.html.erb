<div class="row" style="margin-top:20px;">
  <%= render :partial => 'partials/sidebar_bank' %>
  <div class="span9">
    <div class="span4">
      <h2>Ãšltimos videos</h2>
    </div>
    <div class="span4">
      <form id="search-videos-form" action="/videos/search" method="post">
        <label>Buscar videos:</label>
        <input type="text" name="query" id="videos-search" />
      </form>
    </div>

    <div class="span9 add-content">
      <div class="btn btn-large">
        <i class="icon-film"></i><%= link_to 'Introducir nuevo video', new_video_path %>
      </div>
    </div>

    <ul class="thumbnails">
      <% @videos.each do |video| %>
        <li class="span2">
          <div class="thumbnail">
            <%= link_to image_tag(video.thumbnail), video %>
            <div class="caption">
              <h5><%= link_to video.title, video %></h5>
            </div>
          </div>
        </li>
      <% end %>
    </ul>

    <br />
    
    <%= gmaps4rails(@map) %>
    
  </div>
</div>

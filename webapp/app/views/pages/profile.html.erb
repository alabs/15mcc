<div class="row" style="margin-top: 15px;">
  <div class="span12">
    &lt; <%= link_to 'Volver', '#', :id => 'goback' %>
  </div>
</div>

<div class="row">
  <div class="span2" id="profile-avatar">
    <%= image_tag @user.avatar.url(:normal) %>
    <% if current_user == @user %>
      <span class="label"><%= link_to 'Editar mi cuenta', edit_user_registration_path %></span>
    <% end %>
  </div>
  <div class="span7" id="user-info">
    <div class="row">
      <h1><%= @user.name %></h1>
    </div>
    <div class="row">
      <span><%= @user.username %></span>
    </div>
    <div class="row">
      <p><%= @user.biography %></p>
    </div>
    <div class="row">
      <span><%= link_to @user.homepage, @user.homepage %></span>
    </div>
  </div>
  <div class="span2" id="user-stats">
    <span style="background-color:#000;color:#fff;padding:5px;padding-right:62px;margin-bottom:10px;">Has subido</span>
    <table class="table table-striped table-bordered table-condensed">
      <tbody>
        <tr>
          <td><%= @images.size %></td>
          <td>fotos</td>
        </tr>
        <tr>
          <td><%= @videos.size %></td>
          <td>videos</td>
        </tr>
        <tr>
          <td><%= @texts.size %></td>
          <td>textos</td>
        </tr>
        <tr>
          <td><%= @audios.size %></td>
          <td>audios</td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<hr class="hr-profile" />

<div class="row">
  <div class="span3 offset1">
    <strong>Tus materiales subidos</strong>
  </div>
  <div class="span7" id="profile-main-links">
    <ul>
      <li><%= link_to 'mapa', '#', :id => "show-user-map" %> |</li>
      <li><%= link_to 'línea temporal', '#', :id => "show-user-timeline", :class => "strong" %> |</li>
      <li><%= link_to 'etiquetas', '#', :id => "show-user-tags" %></li>
    </ul>
  </div>
</div>

<div id="user-timeline" class="row span11">
  <div id="timeline" data-url="/profile/<%= @user.username %>/timeline.json">  </div>
</div>

<div id="user-map" class="span10 mt1 hide">
  <div style="margin-top:5em;" class="span12">
    <%= gmaps4rails(@map) %>
  </div>
</div>

<div id="user-tags" class="row hide">
  <!-- TODO: tags -->
</div>


<div class="row">

  <div class="span12">

  <h2>Imágenes enviadas</h2>
  <% if @images.size > 0 %>
    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>
          <th>Título</th>
          <th>Fecha</th>
          <th>Ciudad</th>
          <th>País</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% @images.each do |image| %>
          <tr>
            <td><%= link_to image.title, image %></td>
            <td><%= l image.happened_at, :format => :short %></td>
            <td><%= image.city %></td>
            <td><%= image.country %></td>
            <td>
              <%= link_to 'Mostrar', image %>
              <%= link_to 'Editar', edit_image_path(image) %>
              <%= link_to 'Eliminar', image, confirm: '¿Estas segura?', method: :delete %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>No ha subido imágenes todavía.</p>
  <% end %>

</div>

</div>
  
